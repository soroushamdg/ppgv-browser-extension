{
  "manifest_version": 2,

  "name": "Persian Gateway Validator",
  "description": "This extension will check if the payment gateway you're using is valid or not.",
  "version": "1.0",

  "icons": { "16": "icon/icon-16.png",
   "32": "icon/icon-32.png",
   "48": "icon/icon-48.png",
   "64": "icon/icon-64.png",
  "128": "icon/icon-128.png" },
  
  "browser_action": {
   "default_icon": "icon/icon-32.png",
   "default_popup": "index.html"
  },
  "permissions": [
   "activeTab",
      "tabs"
   ]
}